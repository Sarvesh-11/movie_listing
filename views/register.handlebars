<div class="centered-half">
  
  <div class="row">
    
    <h3 class="pink-text">Register</h3>
      <form class="col s12" action="/register" method="post">

          <div class="row">
              <div class="input-field col s6">
                  <i class="material-icons prefix">account_circle</i>
                  <input required placeholder="Username" name="username" id="username" type="text" class="validate">
                  <label for="username">Username</label>
              </div>
              
              <div class="input-field col s6">
                  <i class="material-icons prefix">lock</i>
                  <input required id="password" type="password" name="password" class="validate">
                  <label for="password">Password</label>
              </div>
          </div>

          <div class="row">
              <div class="input-field col s12">
                  <i class="material-icons prefix">face</i>
                  <input required placeholder="Name" name="name" id="name" type="text" class="validate">
                  <label for="name">Name</label>
              </div>
          </div>

          <button class="btn waves-effect waves-light" type="submit" name="action">
              Signup
              <i class="material-icons right">create</i>
          </button>

      </form>
  
      <center><h6>Already a user? <a class="pink-text" href="/login">Login</a></h6></center>
      {{#if msg includeZero=true}}
        <script>
          M.toast({html: '{{msg}}'})
        </script>
      {{/if}}
  </div>
</div>